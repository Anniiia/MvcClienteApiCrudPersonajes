@model IEnumerable<ApiCrudPersonajes.Models.Personaje>

@{
    ViewData["Title"] = "Buscador";
    List<string> series = ViewData["SERIES"] as List<string>;
}

<h1>Buscador</h1>
<form method="post">
    <select name="serie" class="form-control">
        @foreach (var ser in series)
        {
            <option value="@ser">@ser</option>
        }
    </select>
    <button class="btn btn-dark">Buscar Personajes</button>
</form>

@if (Model != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.IdPersonaje)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Imagen)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Serie)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdPersonaje)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        <img src="@item.Imagen" style="width:80px;height80px;" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Serie)
                    </td>
                    <td>
                        <a asp-controller="Personajes" asp-action="Edit" asp-route-id="@item.IdPersonaje" class="btn btn-warning">Edit</a>
                        <a asp-controller="Personajes" asp-action="Delete" asp-route-id="@item.IdPersonaje" class="btn btn-danger">Delete</a>
                        <a asp-controller="Personajes" asp-action="Details" asp-route-id="@item.IdPersonaje" class="btn btn-dark">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

}


